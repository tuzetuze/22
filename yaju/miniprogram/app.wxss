/**app.wxss**/
/* 全局样式 */
page {
  --primary-color: #2E8B57;
  --primary-light: #48B380;
  --primary-dark: #1F5F3F;
  --secondary-color: #20B2AA;
  --accent-color: #FF7F50;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --border-color: #E0E0E0;
  --background-color: #f5f5f5;
  --card-background: #FFFFFF;
  
  background-color: var(--background-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei UI', 'Microsoft YaHei',
    Arial, sans-serif;
  font-size: 14px;
  color: var(--text-primary);
  box-sizing: border-box;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  background-color: var(--background-color);
}

.page-container {
  padding: 30rpx;
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-padding {
  padding: 30rpx;
}

.card-header {
  padding: 30rpx 30rpx 20rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.card-body {
  padding: 30rpx;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  margin: 20rpx 0;
  font-weight: 500;
  border: none;
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-primary:hover {
  background-color: var(--primary-dark);
}

.btn-secondary {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-small {
  height: 60rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 0 24rpx;
  margin: 10rpx 0;
}

/* 文本样式 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-light {
  color: var(--text-light);
}

.title-large {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.title-medium {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.title-small {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.text-regular {
  font-size: 28rpx;
  color: var(--text-primary);
}

.text-small {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.text-mini {
  font-size: 22rpx;
  color: var(--text-light);
}

/* 布局样式 */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-start {
  justify-content: flex-start;
}

.flex-end {
  justify-content: flex-end;
}

.flex-1 {
  flex: 1;
}

.align-center {
  align-items: center;
}

.align-start {
  align-items: flex-start;
}

.text-center {
  text-align: center;
}

/* 间距样式 */
.margin-top-small { margin-top: 20rpx; }
.margin-top-medium { margin-top: 40rpx; }
.margin-top-large { margin-top: 60rpx; }

.margin-bottom-small { margin-bottom: 20rpx; }
.margin-bottom-medium { margin-bottom: 40rpx; }
.margin-bottom-large { margin-bottom: 60rpx; }

.margin-left-small { margin-left: 20rpx; }
.margin-left-medium { margin-left: 40rpx; }

.margin-right-small { margin-right: 20rpx; }
.margin-right-medium { margin-right: 40rpx; }

.padding-small { padding: 20rpx; }
.padding-medium { padding: 40rpx; }
.padding-large { padding: 60rpx; }

/* 徽章样式 */
.badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.badge-primary {
  background-color: rgba(46, 139, 87, 0.1);
  color: var(--primary-color);
}

.badge-success {
  background-color: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.badge-warning {
  background-color: rgba(255, 193, 7, 0.1);
  color: #FFC107;
}

.badge-danger {
  background-color: rgba(244, 67, 54, 0.1);
  color: #F44336;
}

/* 分割线 */
.divider {
  width: 100%;
  height: 1rpx;
  background-color: var(--border-color);
  margin: 20rpx 0;
}

/* 状态指示器 */
.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  display: inline-block;
  margin-right: 12rpx;
}

.status-pending {
  background-color: #FFC107;
}

.status-progress {
  background-color: #2196F3;
}

.status-completed {
  background-color: #4CAF50;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  color: var(--text-light);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
}