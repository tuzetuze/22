/* 3D房间组件样式 */
.room-3d-container {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 控制面板 */
.control-panel {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-controls {
  display: flex;
  gap: 10rpx;
}

.control-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.control-btn.active {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
}

.furniture-toggle {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 24rpx;
}

.furniture-toggle.active {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
}

/* 场景容器 */
.scene-container {
  perspective: 1000rpx;
  perspective-origin: center center;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
  margin: 20rpx 0;
}

/* 房间3D容器 */
.room-3d {
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform;
  backface-visibility: hidden;
  -webkit-transform-style: preserve-3d;
}

/* 透视视角 */
.room-3d.perspective {
  transform: rotateX(45deg) rotateY(-30deg) rotateZ(0deg);
}

/* 俯视图 */
.room-3d.top {
  transform: rotateX(90deg) rotateY(0deg) rotateZ(0deg);
}

/* 侧视图 */
.room-3d.side {
  transform: rotateX(0deg) rotateY(-90deg) rotateZ(0deg);
}

/* 房间主体 */
.room-body {
  position: relative;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  transform-style: preserve-3d;
  box-shadow: 
    0 10rpx 30rpx rgba(0, 0, 0, 0.15),
    0 4rpx 8rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10rpx);
  will-change: transform;
}

/* 房间标题 */
.room-title {
  position: absolute;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  z-index: 10;
}

/* 房间边框线 */
.room-edges {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.edge {
  position: absolute;
  background: #999;
}

.edge-top {
  top: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
}

.edge-right {
  top: 0;
  right: 0;
  width: 2rpx;
  height: 100%;
}

.edge-bottom {
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
}

.edge-left {
  top: 0;
  left: 0;
  width: 2rpx;
  height: 100%;
}

/* 房间侧面 */
.room-side {
  position: absolute;
  top: 0;
  left: 100%;
  width: 100rpx;
  height: 100%;
  border: 2rpx solid #999;
  transform: rotateY(90deg);
  transform-origin: left center;
  opacity: 0.85;
  background: linear-gradient(to right, rgba(0,0,0,0.1), rgba(0,0,0,0.05));
  box-shadow: inset -2rpx 0 4rpx rgba(0, 0, 0, 0.1);
}

/* 房间顶面 */
.room-top {
  position: absolute;
  top: -100rpx;
  left: 0;
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #999;
  transform: rotateX(90deg);
  transform-origin: center bottom;
  opacity: 0.7;
  background: linear-gradient(to bottom, rgba(255,255,255,0.2), rgba(0,0,0,0.05));
  box-shadow: inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 家具容器 */
.furniture-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 家具样式 */
.furniture {
  position: absolute;
  border: 1rpx solid #666;
  border-radius: 4rpx;
  cursor: pointer;
  transform-style: preserve-3d;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform;
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.15),
    0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.furniture:active {
  transform: translateZ(15rpx) scale(1.05);
  box-shadow: 
    0 8rpx 25rpx rgba(0, 0, 0, 0.25),
    0 4rpx 10rpx rgba(0, 0, 0, 0.15);
}

/* 家具3D效果 */
.furniture-top {
  position: absolute;
  top: -20rpx;
  left: 0;
  width: 100%;
  height: 100%;
  border: 1rpx solid #666;
  transform: rotateX(90deg);
  transform-origin: center bottom;
  opacity: 0.8;
  background: linear-gradient(45deg, rgba(255,255,255,0.3), rgba(0,0,0,0.1));
  box-shadow: inset 0 0 4rpx rgba(255, 255, 255, 0.2);
}

.furniture-side {
  position: absolute;
  top: 0;
  left: 100%;
  width: 20rpx;
  height: 100%;
  border: 1rpx solid #666;
  transform: rotateY(90deg);
  transform-origin: left center;
  opacity: 0.6;
  background: linear-gradient(to right, rgba(0,0,0,0.15), rgba(0,0,0,0.05));
  box-shadow: inset -1rpx 0 2rpx rgba(0, 0, 0, 0.2);
}

/* 家具标签 */
.furniture-label {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  color: white;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.5);
  pointer-events: none;
}

/* 尺寸标注 */
.dimension-labels {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.dimension-width {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #666;
  background: rgba(255, 255, 255, 0.8);
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
}

.dimension-height {
  position: absolute;
  top: 50%;
  right: -50rpx;
  transform: translateY(-50%) rotate(90deg);
  font-size: 20rpx;
  color: #666;
  background: rgba(255, 255, 255, 0.8);
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
}

/* 信息面板 */
.info-panel {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #666;
}

.info-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.color-preview {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
}

/* 特殊家具样式 */
.furniture-sofa {
  border-radius: 8rpx;
}

.furniture-bed {
  border-radius: 6rpx;
}

.furniture-table {
  border-radius: 4rpx;
}

.furniture-tv {
  border-radius: 2rpx;
}

/* 房间装饰元素 */
.room-decorations {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

/* 门 */
.door {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 100rpx;
  background: linear-gradient(to right, #8B4513, #A0522D);
  border: 1rpx solid #654321;
  border-radius: 4rpx 4rpx 0 0;
  box-shadow: 
    0 -2rpx 4rpx rgba(0, 0, 0, 0.2),
    inset 2rpx 0 4rpx rgba(255, 255, 255, 0.1);
}

.door-frame {
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border: 2rpx solid #654321;
  border-radius: 6rpx 6rpx 0 0;
}

.door-handle {
  position: absolute;
  top: 50%;
  right: 8rpx;
  transform: translateY(-50%);
  width: 6rpx;
  height: 6rpx;
  background: #FFD700;
  border-radius: 50%;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 窗户 */
.window {
  position: absolute;
  top: 20%;
  right: 10rpx;
  width: 80rpx;
  height: 60rpx;
  background: linear-gradient(135deg, rgba(135, 206, 235, 0.6), rgba(173, 216, 230, 0.8));
  border: 2rpx solid #4682B4;
  border-radius: 4rpx;
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4);
}

.window-frame {
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border: 2rpx solid #2F4F4F;
  border-radius: 6rpx;
}

.window-glass {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  right: 4rpx;
  bottom: 4rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(173, 216, 230, 0.2));
  border-radius: 2rpx;
}

.window-cross {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 2rpx;
  background: #2F4F4F;
}

.window-cross::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(90deg);
  width: 100%;
  height: 2rpx;
  background: #2F4F4F;
}

/* 地板纹理 */
.floor-pattern {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.1;
}

.floor-tile {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(45deg, rgba(0, 0, 0, 0.05), rgba(255, 255, 255, 0.05));
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .scene-container {
    min-height: 300rpx;
  }
  
  .room-title {
    font-size: 22rpx;
  }
  
  .control-btn, .furniture-toggle {
    font-size: 22rpx;
  }
  
  .door {
    width: 50rpx;
    height: 80rpx;
  }
  
  .window {
    width: 60rpx;
    height: 45rpx;
  }
}
