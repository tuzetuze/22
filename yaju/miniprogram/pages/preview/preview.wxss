/* 3D家居预览页面样式 */

.container {
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 预览头部 */
.preview-header {
  background: linear-gradient(135deg, #2E8B57 0%, #48B380 100%);
  color: white;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-content {
  flex: 1;
}

.preview-title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.preview-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.view-controls {
  display: flex;
  gap: 12rpx;
}

.control-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 12rpx 16rpx;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 80rpx;
}

.control-btn.active {
  background-color: rgba(255, 255, 255, 0.4);
  border-color: rgba(255, 255, 255, 0.6);
}

.control-icon {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.control-text {
  font-size: 20rpx;
}

/* 3D房屋容器 */
.house-3d-container {
  perspective: 1000px;
  perspective-origin: center center;
  height: 500rpx;
  margin: 30rpx;
  position: relative;
  background: linear-gradient(135deg, #87CEEB 0%, #E0F6FF 100%);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.house-model {
  width: 100%;
  height: 100%;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.5s ease;
}

/* 房屋外框 */
.house-frame {
  position: absolute;
  width: 80%;
  height: 80%;
  top: 10%;
  left: 10%;
  transform-style: preserve-3d;
}

.house-wall {
  position: absolute;
  background: linear-gradient(135deg, #F5F5F5 0%, #E8E8E8 100%);
  border: 2rpx solid #D0D0D0;
  opacity: 0.7;
}

.wall-front {
  width: 100%;
  height: 100%;
  transform: translateZ(50rpx);
}

.wall-back {
  width: 100%;
  height: 100%;
  transform: translateZ(-50rpx) rotateY(180deg);
}

.wall-left {
  width: 100rpx;
  height: 100%;
  left: 0;
  transform: rotateY(-90deg) translateZ(50rpx);
}

.wall-right {
  width: 100rpx;
  height: 100%;
  right: 0;
  transform: rotateY(90deg) translateZ(50rpx);
}

.house-floor {
  position: absolute;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  background: linear-gradient(135deg, #D2B48C 0%, #F5DEB3 100%);
  transform: rotateX(90deg) translateZ(50rpx);
}

.house-ceiling {
  position: absolute;
  width: 100%;
  height: 100rpx;
  top: 0;
  background: linear-gradient(135deg, #F8F8FF 0%, #E6E6FA 100%);
  transform: rotateX(-90deg) translateZ(50rpx);
}

/* 房间3D效果 */
.rooms-3d {
  position: absolute;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
}

.room-3d {
  position: absolute;
  transform-style: preserve-3d;
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 8rpx;
  overflow: hidden;
}

.room-3d:hover {
  transform: translateZ(10rpx) scale(1.05);
}

.room-3d.completed {
  box-shadow: 0 4rpx 16rpx rgba(46, 139, 87, 0.3);
}

.room-3d.pending {
  opacity: 0.6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.room-floor {
  position: absolute;
  width: 100%;
  height: 100%;
  bottom: 0;
  transform: rotateX(90deg) translateZ(5rpx);
  border-radius: 8rpx;
}

.room-walls {
  position: absolute;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
}

.room-wall {
  position: absolute;
  opacity: 0.8;
}

.room-wall.wall-front {
  width: 100%;
  height: 20rpx;
  bottom: 0;
  transform: translateZ(5rpx);
}

.room-wall.wall-back {
  width: 100%;
  height: 20rpx;
  bottom: 0;
  transform: translateZ(-5rpx) rotateY(180deg);
}

.room-wall.wall-left {
  width: 10rpx;
  height: 20rpx;
  bottom: 0;
  left: 0;
  transform: rotateY(-90deg) translateZ(5rpx);
}

.room-wall.wall-right {
  width: 10rpx;
  height: 20rpx;
  bottom: 0;
  right: 0;
  transform: rotateY(90deg) translateZ(5rpx);
}

/* 房间家具 */
.room-furniture {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
}

.furniture-item {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  transform: translateZ(2rpx);
}

.furniture-icon {
  font-size: 16rpx;
  opacity: 0.8;
}

/* 房间标签 */
.room-label {
  position: absolute;
  bottom: -25rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  text-align: center;
  white-space: nowrap;
  z-index: 10;
}

.room-name {
  display: block;
  font-weight: 500;
}

.room-status {
  display: block;
  font-size: 16rpx;
  opacity: 0.8;
}

/* 房屋装饰 */
.house-decorations {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.window {
  position: absolute;
  width: 40rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #87CEEB 0%, #B0E0E6 100%);
  border: 2rpx solid #4682B4;
  border-radius: 8rpx;
}

.window-1 {
  top: 30%;
  left: 10%;
  transform: translateZ(52rpx);
}

.window-2 {
  top: 30%;
  right: 10%;
  transform: translateZ(52rpx);
}

.window-3 {
  top: 60%;
  left: 50%;
  transform: translateX(-50%) translateZ(52rpx);
}

.door {
  position: absolute;
  width: 30rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  border: 2rpx solid #654321;
  border-radius: 4rpx 4rpx 0 0;
}

.main-door {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%) translateZ(52rpx);
}

/* 控制面板 */
.control-panel {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 16rpx;
  border-radius: 20rpx;
  display: flex;
  gap: 30rpx;
  align-items: center;
}

.rotation-controls, .zoom-controls {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.rotate-btn, .zoom-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rotate-btn:active, .zoom-btn:active {
  background-color: rgba(255, 255, 255, 0.4);
}

.control-label {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 房间详情面板 */
.room-details-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 60vh;
  z-index: 1000;
  animation: slideUp 0.3s ease-out;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #E0E0E0;
}

.room-info {
  display: flex;
  align-items: center;
}

.room-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.room-text {
  flex: 1;
}

.room-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.room-desc {
  font-size: 24rpx;
  color: #666;
}

.close-btn {
  background-color: #F0F0F0;
  color: #666;
  border: none;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.panel-content {
  padding: 30rpx;
  max-height: 300rpx;
  overflow-y: auto;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.detail-value {
  font-size: 26rpx;
  color: #2E8B57;
  font-weight: 500;
}

.features-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.feature-tag {
  background-color: rgba(46, 139, 87, 0.1);
  color: #2E8B57;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  background-color: #F8F8F8;
  color: #333;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-btn:active {
  background-color: #F0F0F0;
}

.action-icon {
  font-size: 28rpx;
}

.action-text {
  font-size: 22rpx;
}

/* 整体统计 */
.house-stats {
  display: flex;
  justify-content: space-around;
  background-color: white;
  margin: 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  text-align: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #2E8B57;
}

/* 操作按钮 */
.preview-actions {
  position: fixed;
  bottom: 20rpx;
  left: 30rpx;
  right: 30rpx;
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.preview-actions button {
  flex: 1;
  margin: 0;
}

/* 帮助提示 */
.help-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 40rpx;
  border-radius: 20rpx;
  max-width: 500rpx;
  text-align: center;
  z-index: 2000;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  line-height: 1.5;
}

.tip-close {
  background-color: #2E8B57;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* 响应式适配 */
@media screen and (max-width: 400px) {
  .house-3d-container {
    height: 400rpx;
    margin: 20rpx;
  }
  
  .control-panel {
    bottom: 10rpx;
    padding: 12rpx;
    gap: 20rpx;
  }
  
  .rotate-btn, .zoom-btn {
    width: 50rpx;
    height: 50rpx;
    font-size: 20rpx;
  }
}

/* 动画效果 */
.room-3d.completed {
  animation: completedPulse 3s ease-in-out infinite;
}

@keyframes completedPulse {
  0%, 100% {
    box-shadow: 0 4rpx 16rpx rgba(46, 139, 87, 0.3);
  }
  50% {
    box-shadow: 0 6rpx 20rpx rgba(46, 139, 87, 0.5);
  }
}