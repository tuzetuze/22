/* 首页简化样式 */

/* 欢迎区域 */
.welcome-section {
  background: linear-gradient(135deg, #2E8B57 0%, #48B380 100%);
  color: white;
  padding: 60rpx 40rpx;
  text-align: center;
  border-radius: 0 0 40rpx 40rpx;
}

.welcome-title {
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.welcome-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}


/* 主要功能卡片 */
.main-functions {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.function-card {
  background-color: var(--card-background);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.function-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.function-card.highlight {
  border: 2rpx solid var(--primary-color);
  background: linear-gradient(135deg, rgba(46, 139, 87, 0.05) 0%, rgba(72, 179, 128, 0.03) 100%);
}

.function-card.completed {
  border: 2rpx solid #4CAF50;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.05) 0%, rgba(76, 175, 80, 0.02) 100%);
}

.function-card.disabled {
  opacity: 0.6;
  background-color: #F5F5F5;
}

.function-card.active {
  border: 2rpx solid #2196F3;
  background: linear-gradient(135deg, rgba(33, 150, 243, 0.05) 0%, rgba(33, 150, 243, 0.02) 100%);
}

.card-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  width: 60rpx;
  text-align: center;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  display: block;
}

.card-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
  display: block;
}

.card-value {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.card-status {
  margin-left: 16rpx;
  display: flex;
  align-items: center;
}

.status-icon {
  font-size: 32rpx;
  margin-left: 8rpx;
}

/* 智能引导 */
.smart-guide {
  margin: 0 30rpx 30rpx 30rpx;
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  border-left: 6rpx solid var(--primary-color);
  border-radius: 16rpx;
  overflow: hidden;
}

.guide-content {
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.guide-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.guide-text {
  flex: 1;
  margin-right: 20rpx;
}

.guide-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.guide-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

.guide-action {
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.guide-action:active {
  background-color: #1E6B3F;
}

/* 进度提示 */
.progress-tip {
  margin: 0 30rpx 40rpx 30rpx;
  background-color: var(--card-background);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.progress-count {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #E0E0E0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color) 0%, #48B380 100%);
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: center;
  display: block;
}

/* 预算提示 */
.budget-tips {
  margin-top: 20rpx;
  padding: 16rpx;
  background-color: rgba(46, 139, 87, 0.05);
  border-radius: 8rpx;
}

.budget-tips .tip-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 模态框样式复用 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal {
  background-color: var(--card-background);
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  padding: 40rpx 40rpx 20rpx 40rpx;
  border-bottom: 1rpx solid var(--border-color);
  text-align: center;
}

.modal-body {
  padding: 40rpx;
}

.modal-footer {
  padding: 20rpx 40rpx 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.modal-footer button {
  flex: 1;
  margin: 0;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #FFFFFF;
  box-sizing: border-box;
  line-height: normal;
  text-align: left;
  -webkit-user-select: auto;
  user-select: auto;
  -webkit-appearance: none;
  pointer-events: auto;
}

.input-field:focus {
  border-color: #2E8B57;
  outline: none;
  box-shadow: 0 0 0 2rpx rgba(46, 139, 87, 0.1);
}