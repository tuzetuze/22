<view class="container">
  <!-- 用户信息 -->
  <view class="card">
    <view class="card-padding">
      <view class="user-info">
        <view class="avatar">👤</view>
        <view class="user-details">
          <text class="user-name">装修用户</text>
          <text class="user-id">ID: {{openId ? openId.slice(0, 8) + '...' : '获取中...'}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 项目统计 -->
  <view class="card">
    <view class="card-padding">
      <text class="section-title">📊 项目统计</text>
      
      <view class="stats-grid">
        <view class="stat-item">
          <text class="stat-number">{{completedSpaces}}</text>
          <text class="stat-label">已完成空间</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{totalBudget}}</text>
          <text class="stat-label">预算总额</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{completionRate}}%</text>
          <text class="stat-label">完成进度</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{projectDays}}</text>
          <text class="stat-label">规划天数</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="card">
    <view class="card-padding">
      <text class="section-title">⚙️ 功能设置</text>
      
      <view class="menu-list">
        <view class="menu-item" bindtap="exportProject">
          <text class="menu-icon">📄</text>
          <text class="menu-text">导出装修方案</text>
          <text class="menu-arrow">></text>
        </view>
        
        <view class="menu-item" bindtap="shareProject">
          <text class="menu-icon">🔗</text>
          <text class="menu-text">分享给朋友</text>
          <text class="menu-arrow">></text>
        </view>
        
        <view class="menu-item" bindtap="resetProject">
          <text class="menu-icon">🔄</text>
          <text class="menu-text">重置项目</text>
          <text class="menu-arrow">></text>
        </view>
        
        <view class="menu-item" bindtap="showAbout">
          <text class="menu-icon">ℹ️</text>
          <text class="menu-text">关于我们</text>
          <text class="menu-arrow">></text>
        </view>
      </view>
    </view>
  </view>

  <!-- 装修知识 -->
  <view class="card">
    <view class="card-padding">
      <text class="section-title">📚 装修知识</text>
      
      <view class="knowledge-list">
        <view class="knowledge-item">
          <text class="knowledge-title">装修预算分配指南</text>
          <text class="knowledge-desc">硬装、软装、家电的合理预算比例</text>
        </view>
        
        <view class="knowledge-item">
          <text class="knowledge-title">空间布局原则</text>
          <text class="knowledge-desc">如何合理规划各个功能区域</text>
        </view>
        
        <view class="knowledge-item">
          <text class="knowledge-title">装修风格选择</text>
          <text class="knowledge-desc">不同风格的特点和适用场景</text>
        </view>
      </view>
    </view>
  </view>
</view>