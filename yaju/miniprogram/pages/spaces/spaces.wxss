/* 空间列表简化样式 */

/* 页面头部 */
.header-section {
  background: linear-gradient(135deg, #2E8B57 0%, #48B380 100%);
  color: white;
  padding: 40rpx 30rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.page-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 空间网格 */
.spaces-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.space-card {
  background-color: var(--card-background);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  min-height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.space-card:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.space-card.has-budget {
  border: 2rpx solid var(--primary-color);
  background: linear-gradient(135deg, rgba(46, 139, 87, 0.05) 0%, rgba(255, 255, 255, 1) 100%);
}

.space-card.completed {
  border: 2rpx solid #4CAF50;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.1) 0%, rgba(255, 255, 255, 1) 100%);
}

/* 房间图标区域 */
.space-icon-area {
  position: relative;
  margin-bottom: 20rpx;
}

.space-icon {
  font-size: 60rpx;
  display: block;
}

.complete-mark {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 50%;
  font-size: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  transform: translate(50%, -50%);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
  animation: completePulse 2s ease-in-out infinite;
}

@keyframes completePulse {
  0%, 100% { transform: translate(50%, -50%) scale(1); }
  50% { transform: translate(50%, -50%) scale(1.1); }
}

/* 房间详情 */
.space-details {
  flex: 1;
}

.space-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  display: block;
}

.space-status {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.space-budget {
  margin-top: 8rpx;
}

.budget-amount {
  font-size: 22rpx;
  color: var(--primary-color);
  font-weight: 500;
  background-color: rgba(46, 139, 87, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 底部提示 */
.bottom-tip {
  text-align: center;
  padding: 30rpx;
  margin-bottom: 60rpx;
}

.tip-text {
  font-size: 26rpx;
  color: var(--primary-color);
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  display: inline-block;
  border-left: 4rpx solid var(--primary-color);
}

/* 操作按钮区域 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-buttons button {
  margin: 0;
}

/* 引导提示 */
.guide-tip {
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  border-left: 6rpx solid var(--primary-color);
}

.guide-icon {
  font-size: 40rpx;
  color: #FFA726;
}

.guide-close {
  font-size: 32rpx;
  color: var(--text-light);
  padding: 8rpx;
  cursor: pointer;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal {
  background-color: var(--card-background);
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  padding: 40rpx 40rpx 20rpx 40rpx;
  border-bottom: 1rpx solid var(--border-color);
  text-align: center;
}

.modal-body {
  padding: 40rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.modal-footer {
  padding: 20rpx 40rpx 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.modal-footer button {
  flex: 1;
  margin: 0;
}

/* 输入组件 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  background-color: var(--card-background);
  box-sizing: border-box;
}

.input-field:focus {
  border-color: var(--primary-color);
  outline: none;
}

/* 风格选择器 */
.style-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.style-option {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  width: calc(50% - 10rpx);
}

.style-option.selected {
  border-color: var(--primary-color);
  background-color: rgba(46, 139, 87, 0.05);
}

.style-color {
  width: 32rpx;
  height: 32rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.style-name {
  font-size: 26rpx;
  color: var(--text-primary);
  flex: 1;
}

/* 响应式适配 */
@media screen and (max-width: 400px) {
  .space-item {
    width: calc(50% - 10rpx);
    min-height: 140rpx;
    padding: 24rpx 16rpx;
  }
  
  .space-icon-wrapper {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 16rpx;
  }
  
  .space-icon {
    font-size: 32rpx;
  }
  
  .space-name {
    font-size: 24rpx;
  }
}

/* 禁用状态 */
button[disabled] {
  opacity: 0.5;
  cursor: not-allowed;
}

button[disabled]:active {
  transform: none;
}