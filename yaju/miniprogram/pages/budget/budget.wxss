/* 预算页面简化样式 */

/* 预算概览卡片 */
.budget-overview-card {
  background: linear-gradient(135deg, #2E8B57 0%, #48B380 100%);
  color: white;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}

.budget-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 主要预算信息 */
.budget-main {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 30rpx;
}

.budget-total {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.budget-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.budget-amount {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.btn-edit {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

.btn-edit:active {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 使用进度条 */
.budget-usage {
  width: 100%;
}

.usage-bar {
  width: 100%;
  height: 12rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.usage-fill {
  height: 100%;
  background-color: white;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.usage-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.usage-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.usage-percent {
  font-size: 28rpx;
  font-weight: 500;
}

/* 房间预算部分 */
.spaces-budget {
  margin: 0 30rpx 30rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: block;
}

.space-list {
  background-color: var(--card-background);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.space-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.space-item:last-child {
  border-bottom: none;
}

.space-info {
  display: flex;
  align-items: center;
}

.space-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
}

.space-name {
  font-size: 28rpx;
  color: var(--text-primary);
}

.space-budget {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.budget-text {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.mini-progress {
  width: 60rpx;
  height: 4rpx;
  background-color: #E0E0E0;
  border-radius: 2rpx;
  overflow: hidden;
}

.mini-fill {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 2rpx;
  transition: width 0.3s ease;
}

/* 空状态提示 */
.empty-hint {
  text-align: center;
  padding: 60rpx 30rpx;
  background-color: var(--card-background);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.hint-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.3;
  display: block;
}

.hint-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 简单提示 */
.simple-tip {
  margin: 0 30rpx 40rpx 30rpx;
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  border-left: 6rpx solid var(--primary-color);
  border-radius: 12rpx;
  overflow: hidden;
}

.tip-content {
  padding: 30rpx;
  display: flex;
  align-items: flex-start;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #FFA726;
  margin-top: 4rpx;
}

.tip-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  flex: 1;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal {
  background-color: var(--card-background);
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  padding: 40rpx 40rpx 20rpx 40rpx;
  border-bottom: 1rpx solid var(--border-color);
  text-align: center;
}

.modal-body {
  padding: 40rpx;
}

.modal-footer {
  padding: 20rpx 40rpx 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.modal-footer button {
  flex: 1;
  margin: 0;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #FFFFFF;
  box-sizing: border-box;
  line-height: 80rpx;
  text-align: left;
}

.input-field:focus {
  border-color: #2E8B57;
  outline: none;
  box-shadow: 0 0 0 2rpx rgba(46, 139, 87, 0.1);
}